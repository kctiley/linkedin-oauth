<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    {{#if profile}}
      <img src="{{profile.pictureUrl}}">
    {{/if}}
    {{#if user}} 
      <p>
        Hello {{user.displayName}} 
        | 
        <a href="/logout">Logout</a> 
      </p> 
    {{else}} 
      <p> 
        <a href="/auth/linkedin">Login</a> 
      </p> 
    {{/if}}
  </body>
</html>
